##---------- Keybindings for bspwm ----------##


# Terminal (termite)
super + Return
	alacritty

#TO SOCIAL
super + 9    
    bspc desktop -f '^9'

# Floating terminal
super + shift + Return
	alacritty -f

##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
alt + F1
	dmenu_run

# Rofi Network Menu
super + n
	networkmanager_dmenu

# Rofi Menus
super + r
	sh ~/.config/bspwm/bin/rofi-asroot
super + x
    sh ~/.config/bspwm/bin/rofi-powermenu
ctrl + alt + p
	flameshot gui
ctrl + alt + b
	bash ~/.config/bspwm/bin/rofi-bookmark-manager
ctrl + alt + j
	sh ~/.config/bspwm/bin/rofi-book-manager	
ctrl + alt + y
    bash ~/.config/bspwm/bin/rofi_youtube_menu
ctrl + alt + k
    bash ~/.config/bspwm/bin/rofi-killswitch


##---------- Applications ----------##

# Launch Apps
super + shift + g
    subl3

##---------- System ----------##

# Take a screenshot
Print
	scrot 'Screenshot_%Y-%m-%d-%S_$wx$h.png' -e 'mv $f ~/Pictures/Desktop-ss/'
	
# Take a screenshot in 5 second
#alt + Print	
#	scrot -d 5 'Screenshot_%Y-%m-%d-%S_$wx$h.png' -e 'mv $f ~/Pictures/Desktop-ss/'

# Brighness control
XF86MonBrightness{Up,Down}
	backlight{-up,-down}
	
# Volume control
XF86Audio{RaiseVolume,LowerVolume,Mute}
	volume{-up,-down}
	
# Music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}
ctrl + alt + i
    mpc volume +5
ctrl + alt + o
    mpc volume -5    
